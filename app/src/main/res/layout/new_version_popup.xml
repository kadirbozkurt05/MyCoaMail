<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_up">

    <TextView
        android:id="@+id/newVersionPopUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alata"
        android:text="@string/new_version_pop_up"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/newVersionYesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/new_button"
        android:fontFamily="@font/alata"
        android:text="@string/yes"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toStartOf="@+id/newVersionLaterButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newVersionPopUpText"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/newVersionLaterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/new_button"
        android:fontFamily="@font/alata"
        android:text="@string/later"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newVersionYesButton"
        app:layout_constraintTop_toBottomOf="@+id/newVersionPopUpText"/>

</androidx.constraintlayout.widget.ConstraintLayout>