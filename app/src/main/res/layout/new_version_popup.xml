<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/newVersionPopUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There is a new version of the app. Do you want to update"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/newVersionYesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="14dp"
        android:text="Yes"
        app:layout_constraintEnd_toStartOf="@+id/newVersionLaterButton"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newVersionPopUpText" />

    <Button
        android:id="@+id/newVersionLaterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Later"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newVersionYesButton"
        app:layout_constraintTop_toBottomOf="@+id/newVersionPopUpText" />

</androidx.constraintlayout.widget.ConstraintLayout>